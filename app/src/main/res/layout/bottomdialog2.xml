<ScrollView android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:background="#e8f8ff">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Loginpge"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign-Up"
            android:textColor="#000000"
            android:textSize="30dp"
            android:fontFamily="@font/nunito_bolditalic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/reg" />
        <EditText
            android:background="@drawable/bg_edittext"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:hint="FirstName"
            android:layout_below="@+id/reg"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/first"
            android:fontFamily="@font/nunito_bold"/>
        <EditText
            android:background="@drawable/bg_edittext"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="LastName"
            android:paddingLeft="20dp"
            android:layout_below="@+id/first"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_bold"
            android:id="@+id/scd"/>
        <EditText
            android:background="@drawable/bg_edittext"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="Email-ID"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/scd"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_bold"
            android:id="@+id/thrd"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/thrd"
            android:text="DOB"
            android:textColor="#B8B8B8"
            android:textSize="20dp"
            android:fontFamily="@font/nunito_bold"
            android:id="@+id/fort"/>
        <Button
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:id="@+id/dat2"
            android:text="Add date"
            android:layout_toRightOf="@+id/fort"
            android:layout_below="@id/thrd"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/nunito_bold"
            android:background="@drawable/mybutton"/>


        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fort"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Gender"
            android:textSize="20dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:id="@+id/radio"
            android:layout_marginLeft="5dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MALE"
                android:fontFamily="@font/nunito_bold"
                android:checked="true"
                android:id="@+id/rd1" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FEMALE"
                android:fontFamily="@font/nunito_bold"
                android:id="@+id/rd2"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OTHER"
                android:fontFamily="@font/nunito_bold"
                android:id="@+id/rd3"/>
        </RadioGroup>

        <TextView
            android:id="@+id/eddt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radio"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Select Country:"
            android:textSize="21dp"
            android:paddingLeft="10dp"/>
        <Spinner
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_edittext"
            android:id="@+id/droplist"
            android:layout_below="@+id/eddt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/nunito_black"/>

        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:hint="Create Username"
            android:fontFamily="@font/nunito_bold"
            android:layout_below="@+id/droplist"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/fift"
            android:background="@drawable/bg_edittext"
            android:drawableLeft="@drawable/ic_profile"
            android:paddingLeft="20dp"
            />
        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:hint="Create Password"
            android:background="@drawable/bg_edittext"
            android:fontFamily="@font/nunito_bold"
            android:layout_below="@+id/fift"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/sixt"
            android:drawableLeft="@drawable/ic_action_name"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/sixt"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_bold"
            android:background="@drawable/mybutton"
            android:id="@+id/nint"
            android:textColor="#ffffff"
            android:layout_marginBottom="20dp"
            />


    </RelativeLayout>
</ScrollView>
