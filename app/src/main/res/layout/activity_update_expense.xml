<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Updateexpensepg"
    android:background="#e8f8ff">
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottom">
            <EditText
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_edittext"
                android:hint="Item name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:id="@+id/edtx12"
                android:fontFamily="@font/nunito_bold"
                android:paddingLeft="20dp"/>
            <EditText
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_edittext"
                android:paddingLeft="20dp"
                android:hint="Amount"
                android:layout_below="@+id/edtx12"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="20dp"
                android:id="@+id/edtx22"
                android:inputType="number"
                android:fontFamily="@font/nunito_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtx22"
                android:text="Date"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:id="@+id/date12"
                android:fontFamily="@font/nunito_bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Date"
                android:layout_toRightOf="@+id/date12"
                android:layout_below="@id/edtx22"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:id="@+id/setd12"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/nunito_bold"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date12"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Update"
                android:background="@drawable/mybutton"
                android:layout_marginBottom="50dp"
                android:id="@+id/adtrans2"
                android:fontFamily="@font/nunito_bold"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/adtrans2"
                android:layout_centerHorizontal="true"
                android:text="Delete"
                android:background="@drawable/deleted"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/delete"
                android:fontFamily="@font/nunito_bold"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>