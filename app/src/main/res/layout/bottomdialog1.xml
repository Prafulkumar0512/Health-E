<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8f8ff"
    android:id="@+id/bottom1">
    <EditText
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:hint="Add Task"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/edtask"
        android:fontFamily="@font/nunito_bold"
        android:background="@drawable/bg_edittext"
        android:paddingLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtask"
        android:text="Time"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:id="@+id/time1"
        android:fontFamily="@font/nunito_bold"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Time"
        android:layout_toRightOf="@+id/time1"
        android:layout_below="@id/edtask"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:background="@drawable/mybutton"
        android:id="@+id/settime"
        android:fontFamily="@font/nunito_bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settime"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Date"
        android:textSize="20dp"
        android:fontFamily="@font/nunito_bold"
        android:id="@+id/dte"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settime"
        android:layout_toRightOf="@id/dte"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/mybutton"
        android:text="set date"
        android:fontFamily="@font/nunito_bold"
        android:id="@+id/setdte"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time1"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:text="Set Remainder"
        android:textSize="20dp"
        android:fontFamily="@font/nunito_bold"
        android:textColor="#5F6365"
        android:id="@+id/setr"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Add Task"
        android:textColor="#ffffff"
        android:fontFamily="@font/nunito_bold"
        android:background="@drawable/mybutton"
        android:layout_marginBottom="50dp"
        android:id="@+id/adtask"/>

</RelativeLayout>   