<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Expensesanalysis">

            <com.github.mikephil.charting.charts.BarChart
                android:layout_width="650dp"
                android:layout_height="650dp"
                android:layout_margin="10dp"
                android:id="@+id/expensechart"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expensechart"
                android:id="@+id/test"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/nunito_black"
                android:textColor="#1843f5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/test"
                android:id="@+id/test1"
                android:fontFamily="@font/nunito_black"
                android:textColor="#BA0505"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/test1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/nunito_black"
                android:textColor="#8BC34A"
                android:id="@+id/test3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFC107"
                android:id="@+id/avg"
                android:layout_below="@id/test"
                android:fontFamily="@font/nunito_black"
                android:layout_toRightOf="@id/test1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2196F3"
                android:layout_below="@+id/avg"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/test1"
                android:fontFamily="@font/nunito_black"
                android:layout_marginLeft="30dp"
                android:id="@+id/sum"/>

        </RelativeLayout>
    </HorizontalScrollView>


</ScrollView>