<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".Welcomepg">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_above="@+id/LoginCard"
        android:layout_marginBottom="30dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Health-E"
            android:layout_marginBottom="10dp"
            android:textSize="50dp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:fontFamily="@font/nunito_bolditalic">

        </TextView>

        <ImageView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/welcome_screen_head">

        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="40dp"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/login_btn"
            android:layout_marginTop="20dp"
            android:background="@drawable/mybutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Login"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#FFF"
            android:elevation="0dp"/>
        <Button
            android:id="@+id/signup_btn"
            android:layout_marginTop="10dp"
            android:background="@drawable/mybutton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/colorPrimary"
            android:elevation="0dp"/>

    </LinearLayout>


</RelativeLayout>